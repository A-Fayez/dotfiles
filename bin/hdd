#!/usr/bin/env bash

set -uo pipefail
trap 's=$?; echo "$0: Error on line "$LINENO": $BASH_COMMAND"; exit $s' ERR
IFS=$'\n\t'

part_hdd=${1:?}

mkdir -p /mnt/hdd

cat <<EOF > /etc/fstab
PARTUUID=$(blkid -s PARTUUID -o value "$part_hdd") /mnt/hdd ext4 nofail,x-systemd.device-timeout=1ms,noatime 0 2
EOF